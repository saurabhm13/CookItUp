<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!--App Status bar-->
        <item name="android:statusBarColor" >#5A5959</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/bentham</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/bentham</item>
    </style>

    <style name="TertiaryText">
        <item name="android:textColor">#ADC2F6</item>
        <item name="fontFamily">@font/bentham</item>
        <item name="drawableTint">#ADC2F6</item>
    </style>

    <style name="Icons">
        <item name="tint">@color/white</item>
    </style>

    <style name="SecondaryCard">
        <item name="android:background">#000000</item>
    </style>

    <style name="CornerImage" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">8%</item>
        <item name="cornerSizeBottomRight">8%</item>
    </style>

    <style name="RoundedImageShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>